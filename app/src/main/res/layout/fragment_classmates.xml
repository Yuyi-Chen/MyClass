<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_main">
    <TextView
        android:id="@+id/tv_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="我的同学"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_bottom_area">
        <LinearLayout
            android:id="@+id/ll_side_bar_container"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:orientation="vertical">
            <com.cpw.myclass.view.SideBar
                android:id="@+id/mSideBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_classmates_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/ll_side_bar_container"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_show_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_side_bar_show"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:visibility="invisible"
            tools:text="A"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>